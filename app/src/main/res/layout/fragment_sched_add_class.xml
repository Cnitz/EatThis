<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"

    tools:context="com.example.cnitz.eatthis.SchedAddClassFragment">


        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.cnitz.eatthis.SchedInput">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Class"
            android:layout_marginTop="0dp"
            android:id="@+id/Header"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/NameLabel"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/Header"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NameInput"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/NameLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start Time"
            android:id="@+id/STimeLabel"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/NameInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/STimeLabel"
            android:background="@android:drawable/btn_dropdown"
            android:id="@+id/STimeInput"
            android:spinnerMode="dropdown" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="End Time"
            android:id="@+id/ETimeLabel"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/STimeInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/ETimeInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ETimeLabel"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nearest Location"
            android:id="@+id/LocationLabel"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/ETimeInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/LocationInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/LocationLabel"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Days"
            android:id="@+id/DaysLabel"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/LocationInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/DaysInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/DaysLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/SaveButton"
            android:layout_alignTop="@+id/CancelButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/CancelButton"
            android:layout_below="@+id/DaysInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




    </RelativeLayout>
